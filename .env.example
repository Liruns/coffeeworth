# =================================
# 커피값좀 (coffeeworth) 환경 변수
# =================================
# 이 파일을 복사하여 .env.local 생성 후 값을 채워주세요
# cp .env.example .env.local

# ---------------------------------
# App
# ---------------------------------
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ---------------------------------
# Database (Supabase)
# ---------------------------------
# Supabase 대시보드 > Settings > Database > Connection string
DATABASE_URL="postgresql://postgres:[PASSWORD]@db.[PROJECT_REF].supabase.co:5432/postgres"
# Direct connection (for migrations)
DIRECT_URL="postgresql://postgres:[PASSWORD]@db.[PROJECT_REF].supabase.co:5432/postgres"

# ---------------------------------
# NextAuth
# ---------------------------------
# openssl rand -base64 32 로 생성
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-here"

# ---------------------------------
# Kakao OAuth
# ---------------------------------
# https://developers.kakao.com 에서 앱 생성 후 발급
KAKAO_CLIENT_ID="your-kakao-client-id"
KAKAO_CLIENT_SECRET="your-kakao-client-secret"

# ---------------------------------
# 토스페이먼츠
# ---------------------------------
# https://developers.tosspayments.com 에서 테스트 키 발급
# 테스트: test_ck_..., 라이브: live_ck_...
NEXT_PUBLIC_TOSS_CLIENT_KEY="test_ck_your-toss-client-key"
TOSS_SECRET_KEY="test_sk_your-toss-secret-key"

# ---------------------------------
# Resend (이메일)
# ---------------------------------
# https://resend.com 에서 API 키 발급
RESEND_API_KEY="re_your-resend-api-key"
RESEND_FROM_EMAIL="noreply@coffeeworth.kr"
